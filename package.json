{
  "name": "website-template",
  "version": "1.0.0",
  "description": "OXAYAZA's basis for the web site",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OXAYAZA/Website-Template.git"
  },
  "author": "OXAYAZA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OXAYAZA/Website-Template/issues"
  },
  "homepage": "https://github.com/OXAYAZA/Website-Template#readme",
  "dependencies": {
    "tempaw-functions": "2.3.5"
  },
  "devDependencies": {
    "gulp-eslint": "^5.0.0",
    "gulp-html-validator": "0.0.5",
    "gulp-pug-linter": "^1.1.0",
    "gulp-stylelint": "^8.0.0",
    "pug-lint-config-clock": "^2.0.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.4"
  },
  "jsLintConfig": {
    "baseConfig": {
      "extends": "eslint:recommended",
      "env": {
        "browser": true,
        "jquery": true
      }
    },
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "camelcase": 2,
      "no-console": 1
    }
  },
  "pugLintConfig": {
		"extends": "clock",
		"validateIndentation": "\t",
		"validateExtensions": null,
		"validateLineBreaks": "CRLF",
		"disallowSpacesInsideAttributeBrackets": null,
		"requireSpacesInsideAttributeBrackets": true,
		"disallowTrailingSpaces": true,
		"disallowClassLiteralsBeforeIdLiterals": true,
		"disallowIdLiterals": null,
		"disallowIdAttributeWithStaticValue": true,
		"disallowIdLiteralsBeforeAttributes": null,
		"disallowLegacyMixinCall": true,
		"validateTemplateString": true
	},
  "scssLintConfig": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": [
      "stylelint-config-recommended-scss"
    ]
  }
}
